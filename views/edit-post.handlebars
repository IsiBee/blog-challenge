<article>
    <a class="btn" href="/dashboard"> &larr; Back to dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form p-4">
        <div>
            <h3 class="form-label">Title:</h3>
            <input class="form-control" name="post-title" type="text" value="{{post.title}}" />
        </div>
        <div>
            <h3 class="form-label">Post Content:</h3>
            <textarea class="form-control" name="post-body">{{post.post_content}}</textarea>
        </div>
        <div class="py-2">
            by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button class="btn" type="submit">Save post</button>
        <button type="button" class="btn delete-post-btn">Delete post</button>
    </form>
</article>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>